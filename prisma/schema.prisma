
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")

}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  CompleteRegistration Boolean
  categories Category[]
  transactions Transaction[]
}

model Account {
  id String @id @default(uuid())
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  type        AccountType
  name        String
  description String?
  balance     Float    @default(0)
  transactions Transaction[]
}

model Category {
  id          String      @id @default(uuid())
  name        String
  description String @default("اینجا محل توضیحات بیشتر در مورد دسته بندی است")
  type        CategoryType
  createdAt   DateTime    @default(now())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  transactions Transaction[]
  icon        String @default("Star")
  buget       Float?
}

model Transaction {
  id          String    @id @default(uuid())
  amount      Float
  description String?
  type CategoryType
  date        DateTime  @default(now())
  userId      String
  user        User      @relation(fields: [userId], references: [id])

  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id])

  accountId   String
  account     Account   @relation(fields: [accountId], references: [id])
}



enum AccountType {
  CASH
  BANK
  CRYPTO
  STOCK
  WALLET
  SAVINGS
  OTHER
}

enum CategoryType {
  INCOME
  EXPENSE
  TOACCOUNT
}
