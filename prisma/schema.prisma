
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")

}

model Account {
  id String @id @default(uuid())
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  type        AccountType
  name        String
  description String?
  balance     Float    @default(0)
}

enum AccountType {
  CASH
  BANK
  CRYPTO
  STOCK
  WALLET
  SAVINGS
  OTHER
}
